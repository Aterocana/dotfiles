[user]
	name = Aterocana
	email = dominicimaurizio@gmail.com
[alias]
	st = status -sb
	lg = log -p
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	ls = ls-files
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "status"]
	added = green
	changed = yellow
	untracked = cyan
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[core]
	editor = nvim
	pager = diff-so-fancy | less --tabs=4 -RFX
[push]
	default = matching
	followTags = true
[init]
	defaultBranch = main
[interactive]
	diffFilter = diff-so-fancy --patch
