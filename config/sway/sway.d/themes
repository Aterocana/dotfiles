# GTK Themes

font pango:inconsolata 10
set $gnome-schema org.gnome.desktop.interface
exec_always {
	gsettings set org.gnome.desktop.interface color-scheme 'prefer-dark'
	gsettings set $gnome-schema gtk-theme 'gruvbox-dark-gtk'
	gsettings set $gnome-schema icon-theme 'Numix'
	gsettings set $gnome-schema cursor-theme 'Numix-Cursor-Light'
	gsettings set $gnome-schema cursor-size '36'
	gsettings set $gnome-schema font-name 'Droid Sans 11'
}
